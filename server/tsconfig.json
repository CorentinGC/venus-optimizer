{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "$/*": ["*"],
      "@modules/*": ["modules/*"],
      "@services/*": ["services/*"]
    }
  },
  "include": ["src/**/*"]
}


